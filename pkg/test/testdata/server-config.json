{ "_for-emacs": "-*- mode: js2;-*-",
  "handlerConfig": true,
  "https": false,
  "baseURL": ["_env", "${CAMLI_BASE_URL}"],
  "auth": "userpass:testuser:passTestWorld:+localhost",
  "prefixes": {
     "/": {
         "handler": "root",
         "handlerArgs": {
             "ownerName": "test",
             "blobRoot": "/bs/",
             "helpRoot": "/help/",
             "statusRoot": "/status/",
             "searchRoot": "/my-search/",
             "stealth": false
         }
     },

      "/no-http-storage/": {
          "internal": true,
          "handler": "storage-replica",
          "handlerArgs": {
              "backends": ["/bs/"]
          }
      },

      "/no-http-handler/": {
          "internal": true,
          "handler": "status"
      },

     "/bs/": {
         "handler": "storage-filesystem",
         "handlerArgs": {
            "path": ["_env", "${CAMLI_ROOT}"]
          }
     },

      "/sighelper/": {
          "handler": "jsonsign",
          "handlerArgs": {
              "secretRing": ["_env", "${CAMLI_SECRET_RING}"],
              "keyId": "26F5ABDA",
              "publicKeyDest": "/bs/"
          }
     },

     "/index-mem/": {
         "handler": "storage-memory-only-dev-indexer",
         "handlerArgs": {
             "blobSource": "/bs/"
         }
     },

     "/my-search/": {
         "handler": "search",
         "handlerArgs": {
             "index": "/index-mem/",
             "slurpToMemory": true,
             "owner": {
                 "secringFile": ["_env", "${CAMLI_SECRET_RING}"],
                 "identity": "2931A67C26F5ABDA"
             }
         }
     },

     "/share/": {
          "handler": "share",
          "handlerArgs": {
               "blobRoot": "/bs/",
               "index": "/index-mem/"
          }
     }
  }
}
